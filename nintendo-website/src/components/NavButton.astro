---
export interface Props {
	path: string;
    text: string;
    size: number;
}

const { path, text, size } = Astro.props;

import '../styles/fonts.css'
---

<a href="/">
    <span class="icon">
        <svg viewBox="0 0 32 32" width={size} height={size} color="rgb(72, 72, 72)">
            <path fill="rgb(72, 72, 72)" fill-rule="evenodd" d={path}/>
        </svg>
    </span>
    <span class="text">
        {text}
    </span>
</a>

<style>
    a {
        padding-top: 0.875rem;
        padding-bottom: 0.875rem;
        display: inline-flex;
        justify-content: center;
        align-items: center;
        cursor: pointer;
    }
    .icon {
        display: inline-flex;
        justify-content: center;
        align-items: center;
        margin-right: 0.375rem
    }
    .text {
        font-family: 'Museo Sans', sans-serif;
        line-height: 1.4;
        font-size: 1rem;
    }
</style>